# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Enable webjar based resources to be returned
GET 	/webjars/*file  			controllers.WebJarAssets.at(file)

# Login
GET	    /login						controllers.Application.login()
POST    /login                      @controllers.Application.authenticate()
GET     /logout						controllers.Application.logout()

# Search
POST    /search/cpr/                                                @controllers.Search.searchCpr()
GET     /search/name/:lastname/page/:page                           @controllers.Search.searchLastname(lastname: String, page: Int)
GET     /search/name/:firstname/:lastname/page/:page                @controllers.Search.searchLastFirstname(lastname: String, firstname : String, page : Int)
GET     /search/name/:firstname/:middlename/:lastname/page/:page    @controllers.Search.searchLastMiddleFirstname(lastname: String, middlename: String , firstname : String, page : Int)
GET     /show/uuid/:uuid/                                           @controllers.Search.show(uuid : String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
