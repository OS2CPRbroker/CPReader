# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Enable webjar based resources to be returned
GET 	/webjars/*file  			controllers.WebJarAssets.at(file)

# Login
GET	    /login						controllers.Application.login()
POST    /login                      @controllers.Application.authenticate()
GET     /logout						controllers.Application.logout()

# Search
GET     /search/cpr/:cpr/           @controllers.Search.searchCpr(cpr : String)
GET     /search/name/:lastname/     @controllers.Search.searchLastname(lastname: String)
GET     /search/name/:lastname/:firstname/  @controllers.Search.searchLastFirstname(lastname: String, firstname : String)
GET     /search/name/:lastname/:middlename/:firstname/  @controllers.Search.searchLastMiddleFirstname(lastname: String, middlename: String , firstname : String)
GET     /show/uuid/:uuid/           @controllers.Search.show(uuid : String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
